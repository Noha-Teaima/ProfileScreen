    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:outlineAmbientShadowColor="@color/pink"
        android:outlineSpotShadowColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Theme.ProfileScreen"
        app:srcCompat="@drawable/img4" />
    <TextView
        android:id="@+id/name"
        app:layout_constraintEnd_toEndOf="@id/profile_picture"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        android:textSize="25dp"


        android:paddingTop="20dp"
        android:textStyle="bold"
        android:text="Noha Teaima Ebrahim Teaima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_width="wrap_content"
        android:elevation="0dp"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/icon1"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/ic_baseline_email_24"


                />
            <TextView
                app:layout_constraintStart_toEndOf="@id/icon1"
                android:id="@+id/tx_1"
                android:layout_width="wrap_content"
                android:paddingStart="20dp"
                app:layout_constraintTop_toTopOf="@id/icon1"
                app:layout_constraintBottom_toBottomOf="@id/icon1"
                android:text="nohateaima@gmail.com"
                android:textSize="25dp"
                android:layout_height="wrap_content"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:elevation="0dp"
        android:id="@+id/card2"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/ic_baseline_calendar_month_24"


                />
            <TextView
                app:layout_constraintStart_toEndOf="@id/icon2"
                android:id="@+id/tx_2"
                android:layout_width="wrap_content"
                android:paddingStart="20dp"
                app:layout_constraintTop_toTopOf="@id/icon2"
                app:layout_constraintBottom_toBottomOf="@id/icon2"
                android:text="22 Years"
                android:textSize="25dp"
                android:layout_height="wrap_content"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/icon3"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/ic_baseline_work_outline_24"


                />
            <TextView
                app:layout_constraintStart_toEndOf="@id/icon3"
                android:id="@+id/tx_3"
                android:layout_width="wrap_content"
                android:paddingStart="20dp"
                app:layout_constraintTop_toTopOf="@id/icon3"
                app:layout_constraintBottom_toBottomOf="@id/icon3"
                android:text="Software Engineer"
                android:textSize="25dp"
                android:layout_height="wrap_content"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>







    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_margin="40dp"
app:contentPadding="30dp"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintStart_toStartOf="parent"
        android:outlineSpotShadowColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/GithubIcon"
                app:layout_constraintStart_toStartOf="parent"


                android:layout_width="50dp"


                android:layout_height="50dp"
                android:background="@drawable/github"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/LinkedInIcon"
                app:layout_constraintStart_toEndOf="@+id/GithubIcon"
android:layout_margin="20dp"
                android:layout_width="50dp"
                android:paddingTop="30dp"
                android:paddingStart="20dp"
               android:background="@drawable/linkedin"
                android:layout_height="50dp"

                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/FacebookIcon"
android:layout_margin="20dp"
                android:paddingStart="20dp"
                app:layout_constraintStart_toEndOf="@id/LinkedInIcon"
                android:layout_width="50dp"
                android:paddingTop="30dp"
                android:textSize="25dp"

                android:layout_height="50dp"
                android:background="@drawable/facebook"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>